$group

	class ${schema.wzId}Exception
		ctor
			arg message
			arg node
			arg instance
			set this.message = message + (node && instance ? ', row:' + node.r + ', col:' + node.c + ', source:' + instance.wzSourceFilepath(node.s) : '')
			set this.stack = new Error().stack
			set this.node = node

	set md.${schema.wzId}Exception = ${schema.wzId}Exception