$group

	h5 Attributes
	small 
		table
			class pretty-table-2
			thead
				tr
					th Tag
					th Name
					th Type
					th Default
					th Inherited
					th Flags
					th Description
			tbody
				$foreach attribute in element.attributes
					tr
						td ${attribute.tags.join('|')}
						td ${attribute.name}
						td ${attribute.type}
						td ${attribute.default}
						td ${attribute.inheritedFrom}
						td ${attribute.flags}
						td
							$if attribute.comments.lenght > 0
								div
									$foreach comment in attribute.comments
										span ${comment} &nbsp;
							$if attribute.restricts.length > 0
								h5 restrict
								$foreach restrict in attribute.restricts
									$foreach facet in restrict.facets
										table
											tr
												td ${facet.name} ${facet.value}
												td
													$foreach comment in facet.comments
														span ${comment} &nbsp;

